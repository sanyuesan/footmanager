<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    > 
    <ImageView android:id="@+id/sideMenuListImage" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        /> 
    <TextView android:id="@+id/sideMenuListTitle" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_toRightOf="@+id/sideMenuListImage" 
        android:layout_alignWithParentIfMissing="true" 
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true" /> 
    <ImageView android:id="@+id/sideImage"
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_toRightOf="@+id/sideMenuListTitle" 
        android:src="@drawable/technician_main_side_menu_select"
        android:visibility="invisible"/> 
     <TextView   
        android:layout_width="0dp"   
        android:layout_height="0dp"   
        android:layout_toRightOf="@+id/sideImage"   
        android:text="TextView01"   
        android:layout_centerHorizontal="true"   
        android:id="@+id/itemId"
        android:visibility="invisible"/>  
</RelativeLayout> 
